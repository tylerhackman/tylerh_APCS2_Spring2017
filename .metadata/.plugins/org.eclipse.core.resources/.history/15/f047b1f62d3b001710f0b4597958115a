package uberkalt;

import java.awt.BorderLayout;
import java.awt.EventQueue;
import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import java.awt.Color;
import javax.swing.JLabel;
import com.jgoodies.forms.factories.DefaultComponentFactory;

public class Frame extends JFrame {
	Enemy enemy = new Enemy(600, 100);
	Player player = new Player(500, 500);
	private JPanel contentPane;
	/**
	 * @wbp.nonvisual location=211,19
	 */
	private final JLabel label = DefaultComponentFactory.getInstance().createLabel("Uberkalt");

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Frame frame = new Frame();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public Frame() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBackground(Color.WHITE);
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		contentPane.setLayout(new BorderLayout(0, 0));
		setContentPane(contentPane);
		
		JLabel lblUberkalt = DefaultComponentFactory.getInstance().createLabel("Uberkalt");
		contentPane.add(lblUberkalt, BorderLayout.NORTH);
	}
	
	public void paint(Graphics d) {
		super.paint(d);
		Graphics2D dd = (Graphics2D) d;
		player.drawPlayer(dd);
		enemy.drawEnemy(dd);
	}
}
